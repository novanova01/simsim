generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Test {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String?
  questions   Json
  results     Json
  createdAt   DateTime @default(now())
  Result      Result[]
}

model Result {
  id        Int      @id @default(autoincrement())
  testId    Int
  answers   Json
  result    String
  createdAt DateTime @default(now())
  Test      Test     @relation(fields: [testId], references: [id])
}